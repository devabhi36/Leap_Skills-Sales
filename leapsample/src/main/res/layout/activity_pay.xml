<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pay"
        android:padding="49dp">

        <TextView
            android:id="@+id/name_show3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:text="SELECTED STUDENT"/>
        <TextView
            android:id="@+id/phone_show3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:layout_below="@+id/name_show3"
            android:layout_marginTop="20dp"
            android:text="SELECTED CONTACT"/>

        <TextView
            android:id="@+id/email_show3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:layout_below="@id/phone_show3"
            android:layout_marginTop="20dp"
            android:text="SELECTED EMAIL"/>

        <TextView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:layout_below="@id/email_show3"
            android:layout_marginTop="20dp"
            android:text="SELECTED PRODUCT"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected"
            android:layout_marginTop="30dp"
            android:text="TOKEN"
            android:textAppearance="@style/FragmentText"/>
        <Spinner
            android:id="@+id/pay_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview"
            android:entries="@array/pay_token"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_token"
            android:layout_marginTop="30dp"
            android:textAppearance="@style/FragmentText"/>

        <Button
            android:id="@+id/submit_payment"
            android:layout_width="136dp"
            android:layout_height="36dp"
            android:layout_below="@+id/total"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_fill"
            android:onClick="submit_payment"
            android:shadowColor="#000000"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>
</ScrollView>