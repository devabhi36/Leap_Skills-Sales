<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Intern"
        android:padding="49dp">

        <TextView
            android:id="@+id/name_intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:text="SELECTED STUDENT" />
        <TextView
            android:id="@+id/phone_intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:layout_below="@+id/name_intern"
            android:layout_marginTop="20dp"
            android:text="SELECTED CONTACT"/>

        <TextView
            android:id="@+id/email_intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:textColor="@color/button"
            android:layout_below="@id/phone_intern"
            android:layout_marginTop="20dp"
            android:text="SELECTED EMAIL"/>

        <TextView
            android:id="@+id/test_intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:layout_below="@id/email_intern"
            android:layout_marginTop="20dp"
            android:text="GIVEN TEST: NULL"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:text="TASK ASSIGNED-"
            android:layout_below="@+id/test_intern"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/task_intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:layout_marginLeft="20dp"
            android:text="NIL"/>

        <Button
            android:id="@+id/pay_intern"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/phone_show"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:text="PAY"
            android:background="@color/button"
            android:onClick="paymenti"
            android:shadowColor="#000000"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:text="ASSIGNED BY-"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/admin_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:layout_marginLeft="20dp"
            android:text="NIL"/>


        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FragmentText"
            android:text="TASK COMPLETED?"
            android:layout_below="@+id/textview3"
            android:layout_marginTop="30dp"/>
        <ToggleButton
            android:id="@+id/is_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview2"
            android:textOn="YES"
            android:textOff="NO"
            android:layout_toRightOf="@+id/textview2"
            android:layout_marginLeft="50dp"/>
        <ScrollView
            android:id="@+id/hsc3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/textview2"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/comment_intern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="COMMENT (OPTIONAL)"
                android:shadowColor="@color/app_text"
                android:textSize="12dp"
                android:textColor="#040404"
                android:textColorHint="#040404"
                android:fontFamily="@font/worksans_regular"/>
        </ScrollView>

        <Button
            android:id="@+id/submit_task"
            android:layout_width="136dp"
            android:layout_height="36dp"
            android:layout_below="@+id/hsc3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_fill"
            android:onClick="submit_task_intern"
            android:shadowColor="#000000"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>
</ScrollView>